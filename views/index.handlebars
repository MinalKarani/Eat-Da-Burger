<div class="wrapper">
	<div class="container">
		<img class="logo" src="/assets/img/vegburger.jpg">
	</div>
	<div class="container">
		<marquee><h2>Eat-Da-Burger!</h2></marquee>
		<div class="row">
			<div class="col-md-5">
	 			<ul>
	   				{{#each burgers}}
  						{{#unless devoured}}
  				  	<li>
  	  					{{this.burger_name}}
	  					<button class="devour-it" data-id="{{this.id}}">Devour!</button>
  					</li>
 						{{/unless}}
   					{{/each}}
 				</ul>
 			 </div>
  			<div class="col-md-2"></div>
  			<div class="col-md-5">
			  <ul>
	 			  {{#each burgers}}
  					 {{#if devoured}}
			      <li>
  	 				 {{this.burger_name}}
	   			  </li>
  					{{/if}}
   				 {{/each}}
 			  </ul>
  			</div>
	</div>
</div>
<div class="container">
<form class="create-burger">
	<div class="form-group">
		<textarea type="text" name="name" id="burger"></textarea>
	</div>
	<div class="form-group">
		<button type="submit" class="submit">Submit</button>
		<p>Enter a burger you want to eat. Click the "Submit" button.</p>
	</div>
</form>
</div>
</div>
